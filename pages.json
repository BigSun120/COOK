{
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    }, {
      "path": "pages/vip/vip",
      "style": {
        "navigationBarTitleText": "VIP会员",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#EE7B2D",
        "navigationBarTextStyle": "white"
      }
    }, {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false
      }
    }, {
      "path": "pages/searchMenu/searchMenu",
      "style": {
        "navigationBarTitleText": "菜谱搜索",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#EE7B2D",
        "navigationBarTextStyle": "white"
      }

    }, {
      "path": "pages/categories/categories",
      "style": {
        "navigationBarTitleText": "食材分类",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#EE7B2D",
        "navigationBarTextStyle": "white"
      }

    }, {
      "path": "pages/menuDetail/menuDetail",
      "style": {
        "navigationBarTitleText": "",
